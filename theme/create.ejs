<% include header%>
<div class="container">
  <div class="ui two column centered grid">
    <div class="right floated left aligned four wide column">
      <%var name=this.session.user.name%>
      <% include partials/userCard%>
      <% include partials/noReplayCard%>
    </div>
    <div class="left floated twelve wide column">
      <form action="" method="post">
        <div class="ui form segment">
          <h2 style="margin-top:0">发表话题</h2>
          <div class="field">
            <div class="fields">
              <div class="field required">
                <label for="">板块</label>
                <div class="ui selection dropdown">
                  <input type="hidden" name="tab">
                  <div class="default text">板块</div>
                  <i class="dropdown icon"></i>
                  <div class="menu">
                    <%$app.tabs.slice(1).forEach(function (tab) {%>
                      <div class="item" data-value="<%=tab%>">
                        <%=tab%>
                      </div>
                    <%})%>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="field required">
            <label for="">标题</label>
            <input type="text" placeholder="标题字数不少于10个字" name="title">

          </div>
          <div class="field required">
            <label for="">内容</label>
            <textarea name="content" id="" cols="30" rows="10"></textarea>
          </div>
          <input type="submit" class="ui button" value="发布">
        </div>
      </form>
    </div>
  </div>
</div>
<script>
  $('.ui .dropdown').dropdown();
</script>
<% include footer%>